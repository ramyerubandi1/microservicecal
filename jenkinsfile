pipeline {
    agent any


    stages {
        stage('Checkout') {
            steps {
                script {
                   sh 'git clone https://github.com/ramyerubandi1/microservicecal.git'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                   sh 'cd microservice'
                    sh 'docker build -t micorservicea . '
                
                }
            }
        }

        stage('Login to ECR') {
            steps {
                script {
                sh 'aws ecr get-login-password --region us-west- | docker login --username AWS --password-stdin 024848485298.dkr.ecr.us-west-2.amazonaws.com/microserviceb
' 
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                  sh 'docker tag microsericea:latest 024848485298.dkr.ecr.us-west-2.amazonaws.com/microserviceb:latest
'
                    sh 'docker push 024848485298.dkr.ecr.us-west-2.amazonaws.com/microserviceb:lates'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}

