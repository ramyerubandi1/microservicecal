pipeline {
    agent any


    stages {
        stage('Checkout') {
            steps {
                script {
                   sh 'git clone <url>'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                   sh 'cd repo'
                    sh 'docker build -t imagename . '
                
                }
            }
        }

        stage('Login to ECR') {
            steps {
                script {
                sh 'aws er-login. ....' 
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                  sh 'docker tag imagename ecrrepo/imagename '
                    sh 'docker push ecrrepo/imagename'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}

